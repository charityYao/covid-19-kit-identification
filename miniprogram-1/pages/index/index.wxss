/**index.wxss**/
.container{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 15rpx
  ;
}
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  color:#aaa;
  height: auto;
  width: 100%;
  padding-bottom: 20rpx;
  border-radius: 20rpx;
}
.container .header text{
  padding-top: 15rpx;
}
.container .header .t{
  height: 160rpx;
  width: 100%;
  border-radius: 20rpx;
  background-color:rgb(5, 116, 5);
  margin-top: 20rpx;
  text-align: center;
}
.container .header .t .t1{
  font-size: large;
  font-weight: 700;
  margin-top: 10rpx;
}
.container .header .t .t3{
  margin-top: 15rpx;
  padding-bottom: 15rpx;
}
.body{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #aaa;
  height: auto;
  width: 100%;
  padding-bottom: 30rpx;
  border-radius: 20rpx;
}
.body .bt{
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  width: 400rpx;
  margin: 15rpx,30rpx,15rpx,0;
}
.body .bt button{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color:#afaeae;
  height: 120rpx;
  width: 350rpx;
  border: none;
  border-radius: 20rpx;
}
.body .bt button image{
  margin-left: 15rpx;
}
.body .bt button text{
  margin-right: 20rpx;
}
.container .body .bt .img{
  width: 100rpx;
}
.container .body .bt .img image{
  width: 85rpx;
  height: 85rpx;
}
.bottom{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  height: auto;
  width: 100%;
  padding-bottom: 30rpx;
  border-radius: 20rpx;
}
.bottom .img-exhibition{
  display: flex;
  justify-content: space-between;
  height: 400rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  text-align: center;
}
.bottom .img-exhibition .img1 image{
   display: flex;
   width: 350rpx;
   height: 350rpx;
   margin-right: 15rpx;
   border-radius: 20rpx;
}
.bottom .img-exhibition .img2 image{
  display: flex;
  width: 350rpx;
  height: 350rpx;
  border-radius: 20rpx;
}
.bottom .result{
  margin-bottom: 20rpx;
  background-color:#067567;
  width: 100%;
  height: 50rpx;
  text-align: center;
  border-radius: 15rpx;
}
.bottom .check{
  display: flex;
}

